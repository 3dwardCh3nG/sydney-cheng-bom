            <distributionManagement>
                <repository>
                    <id>github</id>
                    <name>GitHub OWNER Apache Maven Packages</name>
                    <url>https://maven.pkg.github.com/3dwardCh3nG/spring-openai</url>
                </repository>
            </distributionManagement>
            <properties>
                <gpg.keyname>${ env.GPG_KEY_NAME }</gpg.keyname>
                <gpg.passphrase>${ env.GPG_SECRET_KEY_PASSWORD }</gpg.passphrase>
                <altSnapshotDeploymentRepository>github::https://maven.pkg.github.com/3dwardCh3nG/spring-openai</altSnapshotDeploymentRepository>
                <altReleaseDeploymentRepository>github::default::https://maven.pkg.github.com/3dwardCh3nG/spring-openai</altReleaseDeploymentRepository>
            </properties>
        </profile>
    </profiles>
    <servers>
        <server>
            <id>github</id>
            <username>${env.GITHUB_ACTOR}</username>
            <password>${env.GITHUB_TOKEN}</password>
        </server>
        <server>
            <id>ossrh</id>
            <username>${env.OSSRH_USERNAME}</username>
            <password>${env.OSSRH_PASSWORD}</password>
        </server>
    </servers>
</settings>
